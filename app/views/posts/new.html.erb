
	<div id="page_wrapper">
		<h1> Nuevo Post </h1>

		<%= form_for :post, url: posts_path do |f| %>

		  
		    <%= f.label :asset, "Selecciona una imágen" %><br><br>
		    <%= f.file_field :asset %> <br><br>
		 
		    <%= f.label :title, "Título" %><br>
		    <%= f.text_field :title %> <br><br>
		  
		    <%= f.label :body, "Comentario" %><br>
		    <%= f.text_area :body %><br><br>
		  
		    <%= f.submit %>
		  
		<% end %>
	</div>