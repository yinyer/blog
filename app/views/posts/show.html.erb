<div id="post_content">

  <h1 class="title">
  	<%= @post.title %>
  </h1>

  <p>
    <%= image_tag @post.image.url(:large) %>
  </p>


  <p class="date_and_author">
  	Posteado hace <%= time_ago_in_words(@post.created_at) %>
    <% if user_signed_in? %>
      | <strong><%= link_to 'Editar', edit_post_path(@post)%> </strong> | <strong><%= link_to 'Borrar', post_path(@post), method: :delete, data: {confirm: '¿Está seguro de querer borrar el Post?'}%> </strong>
    <% end %>
  </p>
  </p>

  <p class="body">
  	<%= @post.body %>
  </p>

  <div id="comments">
    <h2><%= @post.comments.count %> Comentarios</h2>
    <%= render @post.comments%>
    <h3>Agrega un comentario</h3>
    <%= render "comments/form" %>
  </div>




</div>