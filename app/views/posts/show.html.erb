<div id="post_content">

  <h1 class="title">
  	<%= @post.title %>
  </h1>

  <p class="date_and_author">
  	Posteado hace <%= time_ago_in_words(@post.created_at) %> | <strong><%= link_to 'Editar', edit_post_path(@post)%> </strong> | <strong><%= link_to 'Borrar', post_path(@post), method: :delete, data: {confirm: '¿Está seguro de querer borrar el Post?'}%> </strong>
  </p>
  </p>

  <p class="body">
  	<%= @post.body %>
  </p>

  <div>
     <button class="button btn-right"><%= link_to "Volver al Inicio", root_path %>
     </butoon>
  </div>

</div>